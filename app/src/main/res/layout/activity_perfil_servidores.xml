<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilServidores">

    <ImageView
        android:id="@+id/superior"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenServidor"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/colorGray"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nombreServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nombre"
        android:textSize="25dp"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/imagenServidor"
        app:layout_constraintEnd_toEndOf="@id/imagenServidor"
        app:layout_constraintTop_toBottomOf="@id/imagenServidor"/>

    <TextView
        android:id="@+id/trabajoServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Trabajo"
        android:textSize="15dp"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/nombreServidor"
        app:layout_constraintEnd_toEndOf="@id/nombreServidor"
        app:layout_constraintTop_toBottomOf="@id/nombreServidor"/>

    <TextView
        android:id="@+id/descripcionServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Trabajo"
        android:textSize="15dp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/nombreServidor"
        app:layout_constraintEnd_toEndOf="@id/nombreServidor"
        app:layout_constraintTop_toBottomOf="@id/superior"/>



</androidx.constraintlayout.widget.ConstraintLayout>